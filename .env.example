# LLM Provider Selection
# Options: "deepseek" (default, cost-effective) or "anthropic" (higher quality)
LLM_PROVIDER=deepseek

# LLM Provider API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# LangWatch
LANGWATCH_API_KEY=your_langwatch_api_key_here

# Memgraph GearGraph Database
MEMGRAPH_HOST=geargraph.gearshack.app
MEMGRAPH_PORT=7687
MEMGRAPH_USER=memgraph
MEMGRAPH_PASSWORD=your_memgraph_password_here

# Web Search (for verification)
SERPER_API_KEY=your_serper_api_key_here

# Firecrawl Configuration
# Self-hosted Firecrawl (Primary - free)
FIRECRAWL_SELF_HOSTED_URL=https://geargraph.gearshack.app/firecrawl
FIRECRAWL_SELF_HOSTED_KEY=local-dev-key

# Cloud Firecrawl (Fallback - paid)
FIRECRAWL_API_KEY=your_firecrawl_cloud_api_key_here

# Fallback settings
FIRECRAWL_TIMEOUT=30
FIRECRAWL_MAX_RETRIES=2
FIRECRAWL_ENABLE_FALLBACK=true

# GearGraph Sync API (for Firebase sync)
GEARGRAPH_API_KEY=your_geargraph_sync_api_key_here
GEARGRAPH_SYNC_API_URL=https://geargraph.gearshack.app/api/sync/changes

# Firebase Configuration (for gearBase sync)
FIREBASE_SERVICE_ACCOUNT=firebase-service-account.json

# Playlist Monitoring
PLAYLIST_URL=https://www.youtube.com/playlist?list=YOUR_PLAYLIST_ID_HERE

# Email Notification Settings (for playlist monitoring)
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-gmail-app-password-here
RECIPIENT_EMAIL=recipient@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
